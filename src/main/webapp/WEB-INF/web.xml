<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>FilmSessionServlet</servlet-name>
    <servlet-class>ru.job4j.cinema.servlet.FilmSessionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FilmSessionServlet</servlet-name>
    <url-pattern>/film/session</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>TicketBuyServlet</servlet-name>
    <servlet-class>ru.job4j.cinema.servlet.TicketBuyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TicketBuyServlet</servlet-name>
    <url-pattern>/ticket/buy</url-pattern>
  </servlet-mapping>
</web-app>
